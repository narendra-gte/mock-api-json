<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Business</th>
      <th>Title</th>
      <th>Description</th>
      <th>Show discount</th>
      <th>Gifting enabled</th>
      <th>Sharing enabled</th>
      <th>Mobile call enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category_id %></td>
        <td><%= product.business_id %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.show_discount %></td>
        <td><%= product.gifting_enabled %></td>
        <td><%= product.sharing_enabled %></td>
        <td><%= product.mobile_call_enabled %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to "Fine Prints",get_fine_print_of_product_fine_prints_path(product_id:product.id)%></td>
        <td><%= link_to "Purchase Options",get_purchase_options_of_product_purchase_options_path(product_id:product.id)%></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

