    <%= form.check_box :sharing_enabled, id: :product_sharing_enabled %>
  </div>

  <div class="field">
    <%= form.label :mobile_call_enabled %>
    <%= form.check_box :mobile_call_enabled, id: :product_mobile_call_enabled %>
