    <%= form.text_field :title, id: :product_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :show_discount %>
    <%= form.check_box :show_discount, id: :product_show_discount %>
  </div>

  <div class="field">
    <%= form.label :gifting_enabled %>
    <%= form.check_box :gifting_enabled, id: :product_gifting_enabled %>
  </div>

  <div class="field">
