<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>max_per_person</th>
      <th>min_price</th>
      <th>name</th>
      <th>quantity_available</th>
      <th>redemption_qty</th>
      <th>sku</th>
      <th>redemption_qty</th>
      <th>retail_price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <!-- min_price: decimal, retail_price: decimal, max_per_person: integer, quantity_available: integer, sku: string, -->

  <tbody>
    <% @purchase_options.each do |purchase_option| %>
      <tr>
        <td><%= purchase_option.max_per_person %></td>
        <td><%= purchase_option.min_price %></td>
        <td><%= purchase_option.name %></td>
        <td><%= purchase_option.quantity_available %></td>
        <td><%= purchase_option.sku %></td>
        <td><%= purchase_option.redemption_qty %></td>
        <td><%= purchase_option.retail_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
