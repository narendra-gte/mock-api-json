<h1>Categories Product Types</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Product type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories_product_types.each do |categories_product_type| %>
      <tr>
        <td><%= categories_product_type.category_id %></td>
        <td><%= categories_product_type.product_type %></td>
        <td><%= link_to 'Show', categories_product_type %></td>
        <td><%= link_to 'Edit', edit_categories_product_type_path(categories_product_type) %></td>
        <td><%= link_to 'Destroy', categories_product_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

