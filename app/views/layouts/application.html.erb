<!DOCTYPE html>
<html>
  <head>
    <title>MockApiJson</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li>Category <%= link_to 'HTML', categories_path %> <%= link_to 'JSON', categories_path(:format => :json) %></li>
        <li>Business <%= link_to 'HTML', businesses_path %> <%= link_to 'JSON', businesses_path(:format => :json) %></li>
        <li>Product <%= link_to 'HTML', products_path %> <%= link_to 'JSON', products_path(:format => :json) %></li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
